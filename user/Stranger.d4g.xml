<d:model about="urn:always.wpi.edu:Stranger"
       xmlns="http://www.cs.wpi.edu/~rich/cetask/cea-2018-ext"
       xmlns:d="http://www.cs.wpi.edu/~rich/d4g"
       xmlns:a="urn:always.wpi.edu:Activities">

  <!-- Session model for strangers (temporary version)

       See Activities.xml for definition of toplevel activities.

       Note: Toplevel task must be named _Session
  -->

  <task id="_Session">

    <subtasks id="_initial">
      <step name="test" task="_test"/>
      <!-- enroll not optional if user name is empty -->
      <step name="enroll" task="a:EnrollUser"/>	
      <step name="greet" task="a:GreetUser"/>
      <step name="weather" task="a:DiscussWeather" minOccurs="0"/>
      <step name="explain" task="a:ExplainSelf" minOccurs="0"/>	
      <step name="rummy" task="a:PlayRummy" minOccurs="0"/>
      <applicable> $always.getUserModel().getUserName().isEmpty() </applicable>
    </subtasks>

    <subtasks id="_later">
      <step name="test" task="_test"/>
      <step name="greet" task="a:GreetUser"/>
      <step name="enroll" task="a:EnrollUser" minOccurs="0"/>        
      <step name="weather" task="a:DiscussWeather" minOccurs="0"/>
      <step name="explain" task="a:ExplainSelf" minOccurs="0"/>        
      <step name="rummy" task="a:PlayRummy" minOccurs="0"/>
      <applicable> !$always.getUserModel().getUserName().isEmpty() </applicable>
    </subtasks>

  </task>

  <!--  when session "falls off the end" of this plan, it will
        default to toplevel activities. -->
  <d:agent id="_test" text="I am testing mark-ups with two-second durations. &lt;break time=\&quot;3s\&quot;/&gt; Smile. &lt;break time=\&quot;3s\&quot;/&gt; &lt;FACE EXPR=\&quot;SMILE\&quot;/&gt; &lt;DELAY MS=\&quot;2000\&quot;/&gt; &lt;FACE EXPR=\&quot;WARM\&quot;/&gt; &lt;break time=\&quot;3s\&quot;/&gt; Eyebrows. &lt;EYEBROWS DIR=\&quot;UP\&quot;/&gt;&lt;DELAY MS=\&quot;2000\&quot;/&gt; &lt;EYEBROWS DIR=\&quot;DOWN\&quot;/&gt; &lt;break time=\&quot;3s\&quot;/&gt; Concern. &lt;FACE EXPR=\&quot;CONCERN\&quot;/&gt; &lt;DELAY MS=\&quot;2000\&quot;/&gt; &lt;FACE EXPR=\&quot;WARM\&quot;/&gt; &lt;break time=\&quot;3s\&quot;/&gt; Gaze. &lt;GAZE horizontal=\&quot;-1\&quot; vertical=\&quot;1\&quot;/&gt; &lt;DELAY MS=\&quot;2000\&quot;/&gt; &lt;GAZE horizontal=\&quot;0\&quot; vertical=\&quot;0\&quot;/&gt; &lt;break time=\&quot;3s\&quot;/&gt; Head nod. &lt;HEADNOD/&gt; ">
    <d:user text="Ok"/>
  </d:agent>

</d:model>